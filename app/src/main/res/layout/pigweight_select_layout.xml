<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="81dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/pigid"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="猪只编号："
            android:textColor="@color/dark"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/pigid"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pigid_tv"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:textSize="20dp"
                android:textColor="@color/dark"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pigweight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="猪只体重："
            android:textColor="@color/dark"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/pigweight_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/dark"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pigconvsty"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="所在猪栏："
            android:textColor="@color/dark"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/pigconvsty_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/dark"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:weightSum="1"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/but_showDate"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="请选择出生日期"
            android:background="@drawable/queding1"
            android:layout_weight="0.20" />

        <TextView
            android:id="@+id/showDate"
            android:layout_width="195dp"
            android:layout_height="40dp"
            android:textStyle="italic"
            android:textSize="20dp"
            android:textAlignment="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/query"
        android:onClick="Query"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/queding"
        android:layout_gravity="center_horizontal"
        android:text="确认"
        android:textColor="@color/white"/>


</LinearLayout>
