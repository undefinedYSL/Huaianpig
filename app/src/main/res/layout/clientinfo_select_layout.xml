<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dip"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="61dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/ClientName"
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:text="姓        名："
            android:textSize="20dp"
            android:textColor="@color/dark"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/ClientName"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/ClientName_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请输入客户姓名"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="61dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/Emails"
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:text="电子邮件："
            android:textSize="20dp"
            android:textColor="@color/dark"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/Emails"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/Emails_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请输入电子邮件地址"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="61dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/PhoneNumber"
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:text="电话号码："
            android:textSize="20dp"
            android:textColor="@color/dark"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/PhoneNumber"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/PhoneNumber_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请输入电话号码"/>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="61dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/Time"
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:text="交易时间："
            android:textSize="20dp"
            android:textColor="@color/dark"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/Time"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/Time_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="格式:xxxx-xx-xx"/>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="61dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/Money"
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:text="交易金额："
            android:textSize="20dp"
            android:textColor="@color/dark"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/Money"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/Money_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请输入交易金额"/>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="91dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/State"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="订单状态："
            android:textSize="20dp"
            android:textColor="@color/dark"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/State"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/radioGroup_1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/nothave"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="未创建"
                    android:checked="true"
                    android:textColor="@color/dark" />

                <RadioButton
                    android:id="@+id/havenotpay"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="创建未付款"
                    android:textColor="@color/dark" />

                <RadioButton
                    android:id="@+id/havepay"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="已付款"
                    android:textColor="@color/dark" />
            </RadioGroup>/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="71dp">

        <Button
            android:id="@+id/orderNumber"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:text="生成订单号"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/queding1"
            android:layout_alignTop="@+id/linearLayout3"
            android:layout_alignBottom="@+id/linearLayout3" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/orderNumber"
            android:orientation="vertical"
            android:id="@+id/linearLayout3">

            <TextView
                android:id="@+id/haveNumber"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/query"
        android:onClick="Query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/queding"
        android:layout_gravity="center_horizontal"
        android:text="确定"
        android:textColor="@color/white"/>
</LinearLayout>
