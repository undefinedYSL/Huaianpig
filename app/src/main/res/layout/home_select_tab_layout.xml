<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="3"
    android:columnCount="2"
    android:layout_marginLeft="2dip"
    android:layout_marginRight="5dip"
    android:layout_marginTop="5dip"
    android:layout_marginBottom="5dip"
    android:useDefaultMargins="true">


    <LinearLayout
        android:id="@+id/wendu_ll"
        android:layout_width="170dp"
        android:layout_height="113dp"
        android:background="@drawable/wendu"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:text="温度"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shidu"
            android:layout_toEndOf="@+id/shidu" />
        <TextView
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text=""
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/wendu"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shidu"
            android:layout_toEndOf="@+id/shidu" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/co2_ll"
        android:layout_width="170dp"
        android:layout_height="113dp"
        android:background="@drawable/co21"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:text="CO2"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shidu"
            android:layout_toEndOf="@+id/shidu" />
        <TextView
            android:layout_width="63dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text=""
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/co2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shidu"
            android:layout_toEndOf="@+id/shidu"
            android:layout_weight="0.75" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="113dp"
        android:background="@drawable/shidu1"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:text="湿度"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/textView1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shidu"
            android:layout_toEndOf="@+id/shidu" />
        <TextView
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text=""
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/shidu"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shidu"
            android:layout_toEndOf="@+id/shidu"
            android:layout_weight="0.38" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="113dp"
        android:background="@drawable/guangzhao"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:text="光照"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shidu"
            android:layout_toEndOf="@+id/shidu" />
        <TextView
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/guangzhao"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shidu"
            android:layout_toEndOf="@+id/shidu"
            android:layout_weight="0.57" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="113dp"
        android:background="@drawable/nh31"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:text="氨气"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shidu"
            android:layout_toEndOf="@+id/shidu" />
        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text=""
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/anqi"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shidu"
            android:layout_toEndOf="@+id/shidu"
            android:layout_weight="0.49" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="113dp"
        android:background="@drawable/fenchen1"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:text="粉尘"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shidu"
            android:layout_toEndOf="@+id/shidu"
            android:layout_weight="0.16" />
        <TextView
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/fenchen"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shidu"
            android:layout_toEndOf="@+id/shidu"
            android:layout_weight="0.37" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="113dp"
        android:background="@drawable/kongbai"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:textColor="@color/white"
            android:text="空气流速"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shidu"
            android:layout_toEndOf="@+id/shidu" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text=""
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/airrate"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shidu"
            android:layout_toEndOf="@+id/shidu" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="113dp"
        android:background="@drawable/liusu"
        android:weightSum="1"
        android:orientation="horizontal">

    </LinearLayout>

</GridLayout>
