<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dip">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="91dip"
        android:clickable="true">

        <TextView
            android:id="@+id/pigid"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="猪只编号："
            android:textColor="@color/dark"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/pigid"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center"
            android:weightSum="1">
            <TextView
                android:id="@+id/pigid_tv"
                android:layout_width="200dp"
                android:layout_height="63dp"
                android:textSize="18dp"
                android:textColor="@color/dark"
                android:layout_centerVertical="true"
                android:layout_weight="1.42" />

            <Button
                android:id="@+id/chaxun"
                android:layout_width="68dp"
                android:layout_height="40dp"
                android:text="查询"
                android:background="@drawable/queding1"
                android:layout_centerVertical="true"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="61dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/pigweight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="猪只体重："
            android:textColor="@color/dark"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/pigweight"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pigweight_tv"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:textSize="20dp"
                android:textColor="@color/dark"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="61dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/pigbirth"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="出生日期："
            android:textColor="@color/dark"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/pigbirth"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pigbirth_tv"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:textSize="20dp"
                android:textColor="@color/dark"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="61dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/pigconvsty"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="所在猪栏："
            android:textColor="@color/dark"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/pigconvsty"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pigconvsty_tv"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:textSize="20dp"
                android:textColor="@color/dark"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="61dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/isdead"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="是否健康："
            android:textColor="@color/dark"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/isdead"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/isdead_tv"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:textSize="20dp"
                android:textColor="@color/dark"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
