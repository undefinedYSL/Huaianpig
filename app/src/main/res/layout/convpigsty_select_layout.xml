<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="91dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/pigid"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="猪只编号："
            android:textColor="@color/dark"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/pigid"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/pigid_tv"
                android:layout_width="180dp"
                android:layout_height="61dp"
                android:textSize="20dp"
                android:textColor="@color/dark"
                android:layout_weight="0.78" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="61dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/laterpigsty"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="所转猪栏："
            android:textColor="@color/dark"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/laterpigsty"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/laterpigsty_et"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:textSize="20dp"
                android:textColor="@color/dark"/>

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="260dp" />

    <Button
        android:id="@+id/query"
        android:onClick="Query"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/queding"
        android:layout_gravity="center_horizontal"
        android:text="确定"
        android:textColor="@color/white"/>

</LinearLayout>
